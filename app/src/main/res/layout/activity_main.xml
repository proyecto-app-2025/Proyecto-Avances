<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenido centrado -->
    <LinearLayout
        android:id="@+id/homeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Logo (blanco/negro) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logoCard"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="#000000">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LOGO"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:gravity="center"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleos CR"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <!-- Subtítulo (gris neutro) -->
        <TextView
            android:id="@+id/txtSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encuentra vacantes o\npublica un empleo"
            android:textColor="#444444"
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/homeButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <!-- Botón outlined (negro) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeeJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver empleos"
                android:textAllCaps="false"
                android:textColor="#000000"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:minWidth="0dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <!-- Botón sólido (negro) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPostJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicar empleo"
                android:textAllCaps="false"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                app:backgroundTint="#000000"
                android:minWidth="0dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>







