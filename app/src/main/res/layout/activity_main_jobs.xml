<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".MainJobs">

    <!-- FILA SUPERIOR: buscador + botón "+ Publicar" -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Buscador tipo caja con borde negro -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint=""
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="#000000"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusBottomEnd="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint=""
                android:inputType="text"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón + Publicar estilo outlined -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+ Publicar"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:minWidth="0dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"/>
    </LinearLayout>

    <!-- Título "Empleos" -->
    <TextView
        android:id="@+id/txtTituloLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empleos"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista scrolleable de empleos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEmpleos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloLista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/activity_item_job" />

</androidx.constraintlayout.widget.ConstraintLayout>
